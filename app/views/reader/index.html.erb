<%= render "layouts/navbar" %>
<section id="reader" class="content-section">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <form>
          <div class="form-group" style="margin: 1em; auto;" >
            <%= form_tag(alumns_path, :method => 'get' ) do %>
            <%= text_field_tag :bar_code, params[:bar_code] , placeholder: "Código de barras" , value: "" , autofocus: "True"%>
            <% end %>
          </div>
        </form>
        <% if @alumn != nil%>
          <% if @alumn.image_file_name != nil%>
            <%= image_tag(@alumn.image.url(:original), alt: "", class: "img-responsive") %>
          <% else%>
            <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
          <% end %>
          <div class="text-center">
            <h3><%= @alumn.name %></h3>
          </div>
        <% else%>
          <h2 class="text-danger"> Aluno não encontrado </h2>
        <% end %>
        <hr style="width: 10%">
      </div>
    </div>

  </div>
</section>
