    <header>
     <% if flash[:notice]%>
      <div class="alert alert-danger" role = "alert"><%= flash[:notice]%></div>
     <% end %>
        <div class="page-header">
          <div class="container">
              <div class="row">
                <div class="col-sm-12 col-md-6">
                	<%= image_tag("Logo_Escola_X_500x500.png", class: "img-responsive", alt: "logo") %>
                </div>
                <div class="col-sm-12 col-md-6" id="formz">
                  <h1 class="text-info text-center text-uppercase">
  									Fa√ßa login
                    <br>
                  	<small class="text-muted text-lowercase">
                      para utilizar a ferramenta
                    </small>
                  </h1>
  								<%= form_tag login_path do %>
                  <div class="form-group">
                		<%= label_tag 'login', 'Login', class: 'sr-only' %>
                    <div class="input-group">
                    	<span class="input-group-addon fa fa-user"></span>
                      <%= text_field_tag('login', nil, placeholder: "Login", class: "form-control") %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag 'password', 'Senha', class: 'sr-only' %>
                    <div class="input-group">
                      <span class="input-group-addon fa fa-lock"></span>
                      <%= password_field_tag('password', nil, class: 'form-control', placeholder: 'Senha') %>
                    </div>
                  </div>
                  <%= submit_tag "Entrar", class: 'btn btn-block btn-success' %>
  							<% end %>
              </div>
              <%= link_to 'Como logar', login_helper_path %>
            </div>
        	</div>
        </div>
  	</header>
