<%= render "layouts/navbar" %>

<% if flash[:success]%>
<br>
<br>
<div class="alert alert-success" role = "alert"><%= flash[:success]%></div>
<% end %>
<% if flash[:alert]%>
<br>
<br>
 <div class="alert alert-danger" role = "alert"><%= flash[:alert]%></div>
<% end %>
<h1 class="text-uppercase text-center" id="title-list"><span class="fa fa-sticky-note text-left"></span> Lista de Matérias</h1>
<hr>
<section class="content-section" >
  <div class="container">
    <% @subjects.each do |subject| %>
      <div class="row item">
        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h3>Matéria: <%= subject.name_subject %></h3>
          <h4>Série: <%= subject.class_level %></h4>
          <h4>Professor Responsável: <%=subject.teacher.name %></h4>
          <%= link_to '<span class="fa fa-search-plus"></span> Mostrar'.html_safe, subject_path(subject), class:"btn btn-default" %>
          <%= link_to '<span class="fa fa-check"></span> Adicionar Matéria'.html_safe, add_classroom_path(subject_id: subject.id) ,method: :post, class:'btn btn-default btn-success' %>
        </div>
      </div>
    <%end%>
  </div>
</section>
