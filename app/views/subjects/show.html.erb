<%= render "layouts/navbar" %>
<br>
<br>
 <% if flash[:success]%>
  <div class="alert alert-success" role = "alert"><%= flash[:success]%></div>
 <% end %>
 <% if flash[:notice]%>
  <div class="alert alert-warning" role = "alert"><%= flash[:notice]%></div>
 <% end %>
<section class="content-section" id="alunos-desc">
  <div class="container">
    <div class="pull-right">
        <%= link_to '<span class="fa fa-arrow-left"></span> Voltar'.html_safe, users_path, class:'btn btn-sm btn-info' %>
      <%if @current_user.permission=="Principal" %>
        <%= link_to '<span class="fa fa-edit"></span> Editar'.html_safe, edit_subject_path(@subject), class:"btn btn-sm btn-default" %>
        <%= link_to '<span class="fa fa-times"></span> Excluir'.html_safe, "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.' } %>
      <%end%>
    </div>
      <div class="row item">

        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h3>Matéria: <%= @subject.name_subject %></h3>
          <h4>Série: <%= @subject.class_level %></h4>
          <h4><%=link_to "Professor: #{@subject.teacher.name}",teacher_path(@subject.teacher), class: "btn btn-default" %></h4>
        </div>
    </div>
  </div>
</section>
