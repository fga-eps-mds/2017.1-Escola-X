<%= render "layouts/navbar" %>
<h1 class="text-uppercase text-center" id="title-list"><span class="fa fa-sticky-note text-left"></span> Matérias</h1>
<hr>
<section class="content-section" >
  <div class="container">
    <% @classroom_subjects.each do |subject| %>
      <div class="row item">
        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h3>Matéria: <%= subject.name_subject %></h3>
          <h4>Série: <%= subject.class_level %></h4>
          <h4>Professor Responsável: <%= subject.teacher.name %></h4>
          <%= link_to '<span class="fa fa-search-plus"></span> Mostrar'.html_safe, teacher_grades_path(params[:teacher_id], params[:classroom_id], subject), class:"btn btn-default" %>
        </div>
      </div>
    <%end%>
    <%= link_to '<span class="fa fa-arrow-left"></span> Voltar'.html_safe, teacher_classrooms_path(params[:teacher_id]), class:'btn btn-info' %>
  </div>
</section>
