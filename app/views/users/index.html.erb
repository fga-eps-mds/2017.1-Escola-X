<%= render "layouts/navbar" %>
<h1 class="text-uppercase text-center" id="title-list"><span class="glyphicon glyphicon-list text-left"></span> Lista de Usu√°rios</h1>
<hr>
<section class="content-section" id="alumns-list">
  <% @users.each do |user| %>
  <% if user.is_a?(Parent)%>
    <div class="container">
      <div class="row item">
        <div class="col-sm-12 col-md-4">
          <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
        </div>
        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h2> <%= user.name %> </h2>
          <h4> <%= user.address %> </h4>
          <h4> <%= user.birth_date %> </h4>
          <h4> <%= user.gender %> </h4>
          <h4> <%= user.phone %> </h4>
          <h4> <%= user.parent_cpf %> </h4>
          <%= link_to '<span class="fa fa-search-plus"></span> Visualizar'.html_safe, parent_path(user), class:'btn btn-info' %>
          <%if @current_user.permission =="Principal" %>
            <%= link_to '<span class="fa fa-unlock"></span> Resetar senha'.html_safe, edit_password_path(user), class:'btn btn-default' %>
          <% end %>
        </div>
      </div>
      <hr>
    </div>
  <% end %>
    <% if user.is_a?(Alumn)%>
      <div class="container">
        <div class="row item">
          <div class="col-sm-12 col-md-4">
            <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
          </div>
          <div class="col-sm-12 col-md-8 text-capitalize descript">
            <h2><%= user.name %></h2>
            <h4> <%= user.address %> </h4>
            <h4> <%= user.birth_date %> </h4>
            <h4>Idade: <%= user.get_age %> </h4>
            <h4> <%= user.gender %> </h4>
            <h4> <%= user.phone %> </h4>
            <h4><%= user.registry %></h4>
            <%= link_to '<span class="fa fa-search-plus"></span> Visualizar'.html_safe, alumn_path(user), class:'btn btn-info' %>
            <%if @current_user.permission =="Principal" %>
              <%= link_to '<span class="fa fa-unlock"></span> Resetar senha'.html_safe, edit_password_path(user), class:'btn btn-default' %>
            <% end %>
          </div>
        </div>
        <hr>
      </div>
    <% end %>
    <% if user.is_a?(Employee)%>
      <div class="container">
        <div class="row item">
          <div class="col-sm-12 col-md-4">
            <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
          </div>
          <div class="col-sm-12 col-md-8 text-capitalize descript">
            <h2><%= user.name %></h2>
            <h4> <%= user.address %> </h4>
            <h4> <%= user.birth_date %> </h4>
            <h4>Idade: <%= user.get_age %> </h4>
            <h4> <%= user.gender %> </h4>
            <h4> <%= user.phone %> </h4>
            <h4><%= user.registry %></h4>
            <%= link_to '<span class="fa fa-search-plus"></span> Visualizar'.html_safe, teacher_path(user), class:'btn btn-info' %>
            <%if @current_user.permission =="Principal" %>
              <%= link_to '<span class="fa fa-unlock"></span> Resetar senha'.html_safe, edit_password_path(user), class:'btn btn-default' %>
            <% end %>
          </div>
        </div>
        <hr>
      </div>
    <% end %>
  <% end %>
</section>